{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "lib": ["es2015","dom"],
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "bin",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*", "src/types/*"]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["bin/**/*"]
  }
